{
	"name": "davor-client",
	"author": "Matheus Torres <matheustrres.rj@gmail.com>",
	"description": "An easy-to-use, slash-command-based client for Discord built with Typescript to ease daily activities",
	"version": "1.0.0",
	"main": "dist/index.js",
	"license": "Apache-2.0",
	"scripts": {
		"build": "tsc --build ./tsconfig.build.json",
		"format": "prettier --write \"{src,tests}/**/*.ts\"",
		"lint": "eslint \"{src,tests}/**/*.ts\" --fix",
		"start:dev": "dotenv -e .dev.env -- tsx src/index.ts",
		"start": "node --env-file .env ."
	},
	"dependencies": {
		"discord.js": "^14.14.1"
	},
	"devDependencies": {
		"@types/node": "^20.11.0",
		"@typescript-eslint/eslint-plugin": "^6.18.1",
		"@typescript-eslint/parser": "^6.18.1",
		"dotenv-cli": "^7.3.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import-helpers": "^1.3.1",
		"eslint-plugin-prettier": "^5.1.3",
		"prettier": "^3.2.1",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3"
	},
	"keywords": []
}
